<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e9e5e5"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="6dp" />

    <LinearLayout
        android:id="@+id/layoutOneAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/krugliye_ugli"
        android:gravity="right"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff">

            <TextView
                android:id="@+id/applName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Кулинар гипопотам съел хо..."
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="35dp"
                android:gravity="top"
                android:paddingBottom="20dp"
                android:text="  Цель"
                android:textColor="#710c65"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/applicationID"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_gravity="left|center"
                android:gravity="top"
                android:paddingBottom="20dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton0"
                android:layout_width="42dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:background="@null"
                app:srcCompat="@android:drawable/btn_star_big_off" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/writeAdout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="55dp"
                android:text="n kdjafn adfkjn kdakjn sdfkjv sdkjf"
                android:textColor="#000000"
                android:textSize="17sp"
                android:translationY="5dp" />

            <TextView
                android:id="@+id/examp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="  Пример работы: "
                android:textColor="#710c65"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMore"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="bottom|center_vertical|end"
                android:text="Подробнее"
                android:translationY="0dp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="25dp"
                android:text="  Опыт: "
                android:textColor="#710c65"
                android:textSize="18sp"
                android:translationY="0dp" />

            <Button
                android:id="@+id/userBtn"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="top|center"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="20dp"
                android:text="Дмитриев Александр"
                android:textColor="#001eff" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:text="Button" />

            <TextView
                android:id="@+id/expView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="63dp"
                android:layout_marginBottom="25dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="18sp"
                android:translationY="0dp" />

            <TextView
                android:id="@+id/exampView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="152dp"
                android:text="нет"
                android:textColor="#000"
                android:textSize="18sp" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
